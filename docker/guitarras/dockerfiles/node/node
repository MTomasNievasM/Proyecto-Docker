FROM imagen_nginx

RUN apt install -yq --no-install-recommends \
    nodejs \
    npm

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyectos/pokeapit
WORKDIR /root/admin/node
COPY ./proyectos/pokeapi/laweb ./proyectos/pokeapit
COPY ./dockerfiles/node/admin/start.sh /root/admin/node/
RUN chmod +x /root/admin/node/start.sh

ENTRYPOINT [ "./start.sh" ]